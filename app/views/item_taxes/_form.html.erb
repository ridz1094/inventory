<%= form_with(model: item_tax, local: true) do |form| %>
  <% if item_tax.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item_tax.errors.count, "error") %> prohibited this item_tax from being saved:</h2>

      <ul>
      <% item_tax.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% if(items.size > 0)  %>
  <div class="actions">
    <p>Tax Type: </p>
    <%= form.text_field :tax_type %>
    <p>Tax: </p>
    <%= form.text_field :tax %>
    <p>Item: </p>
    <%= form.select(:item_id) do %>
      <% items.each do |c| -%>
        <%= content_tag(:option, c.name, value: c.id) %>
      <% end %>
    <% end %>
    <%= form.submit %>
  </div>
  <% else %>
    <h4>Create items to add item taxes</h4>
  <% end %>
<% end %>
