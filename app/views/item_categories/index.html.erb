<h3><%= link_to 'Home', '/' %></h3>

<h1>Item Categories</h1>
<% if(@item_categories.size > 0) %>
<table>
  <thead>
    <tr>
      <th colspan="2">Id</th>
      <th colspan="3">Name</th>
      <th colspan="2">Created At</th>
      <th colspan="2">Updated At</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @item_categories.each do |item_category| %>
      <tr>
        <td colspan="2"> <%= item_category.id %> </td>
        <td colspan="3"> <%= item_category.name %> </td>
        <td colspan="2"> <%= item_category.created_at %> </td>
        <td colspan="2"> <%= item_category.updated_at %> </td>
        <td colspan="3"><%= link_to 'Show', item_category %>
          <%= link_to 'Edit', edit_item_category_path(item_category) %>
          <%= link_to 'Destroy', item_category, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h3>No records found</h3>
<% end %>
<br>

<%= link_to 'New Item Category', new_item_category_path %>
